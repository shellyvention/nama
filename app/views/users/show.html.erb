<div class="page-header">
  <h1>User Information</h1>
</div>

<table class="table table-striped span12">
  <tbody>
    <tr>
      <td><strong>Last Name:</strong></td>
      <td><%= @user.last_name %></td>
    </tr>
    <tr>
      <td><strong>First Name:</strong></td>
      <td><%= @user.first_name %></td>
    </tr>
    <tr>
      <td><strong>Street:</strong></td>
      <td><%= @user.street %></td>
    </tr>
    <tr>
      <td><strong>Postal Code:</strong></td>
      <td><%= @user.postal_code %></td>
    </tr>
    <tr>
      <td><strong>City:</strong></td>
      <td><%= @user.city %></td>
    </tr>
    <tr>
      <td><strong>Phone Landline:</strong></td>
      <td><%= @user.phone_landline %></td>
    </tr>
    <tr>
      <td><strong>Phone Mobile:</strong></td>
      <td><%= @user.phone_mobile %></td>
    </tr>
    <tr>
      <td><strong>Date Of Birth:</strong></td>
      <td><%= @user.date_of_birth %></td>
    </tr>
    <tr>
      <td><strong>Email:</strong></td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td><strong>Role:</strong></td>
      <td><%= @user.role_name %></td>
    </tr>
    <tr>
      <td><strong>Active?</strong></td>
      <td>
      <% if @user.active %>
        <i class="icon-ok"></i>
      <% else %>
        <i class="icon-remove"></i>
      </td>
    <% end %>
    </tr>
    <tr>
      <td colspan="2">
        <%= link_to ll('.back'), users_path, :class => 'btn btn-small' %>
        <%= link_to ll('.edit'), edit_user_path(@user), :class => 'btn btn-small' %>
        <%= link_to ll('.destroy'), user_path(@user), :method => 'delete',
              :data => { :confirm => ll('.confirm'), :default => 'Are you sure?' },
              :class => 'btn btn-danger btn-small' %>
      </td>
    </tr>
  </tbody>
</table>
