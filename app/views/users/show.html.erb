<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @user.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @user.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street) %>:</strong></dt>
  <dd><%= @user.street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%= @user.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @user.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_landline) %>:</strong></dt>
  <dd><%= @user.phone_landline %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_mobile) %>:</strong></dt>
  <dd><%= @user.phone_mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
  <dd><%= @user.date_of_birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to ll('.back'), users_path, :class => 'btn' %>
  <%= link_to ll('.edit'), edit_user_path(@user), :class => 'btn' %>
  <%= link_to ll('.destroy'), user_path(@user), :method => 'delete',
        :data => { :confirm => ll('.confirm'), :default => 'Are you sure?' },
        :class => 'btn btn-danger' %>
</div>
