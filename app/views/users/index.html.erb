<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:street) %></th>
      <th><%= model_class.human_attribute_name(:postal_code) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:phone_landline) %></th>
      <th><%= model_class.human_attribute_name(:phone_mobile) %></th>
      <th><%= model_class.human_attribute_name(:date_of_birth) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.last_name, user_path(user) %></td>
        <td><%= user.first_name %></td>
        <td><%= user.street %></td>
        <td><%= user.postal_code %></td>
        <td><%= user.city %></td>
        <td><%= user.phone_landline %></td>
        <td><%= user.phone_mobile %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to ll('.edit'), edit_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to ll('.destroy'), user_path(user), :method => :delete,
                :data => { :confirm => ll('.confirm'), :default => 'Are you sure?' },
                :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to ll('.new'), new_user_path, :class => 'btn btn-primary' %>
