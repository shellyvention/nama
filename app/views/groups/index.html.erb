<h3>Manage Groups</h3>
<div class="resource-index">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Group Name</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= link_to group.name, group_path(group) %></td>
          <td>
            <%= link_to ll('.edit'), edit_group_path(group), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to ll('.new'), new_group_path, :class => 'btn btn-primary' %>
</div>
