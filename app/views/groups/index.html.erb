<h3><%= ll('.label_group_manage') %></h3>
<div class="resource">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= ll('.label_group_name') %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= link_to group.name, group_path(group) %></td>
          <td style="text-align: right;">
            <%= link_to ll('.label_edit'), edit_group_path(group), :class => 'btn btn-mini' %>
            <%= link_to ll('.label_view'), group_path(group), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to ll('.label_new'), new_group_path, :class => 'btn btn-primary' %>
</div>
