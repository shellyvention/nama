<div class="page-header">
  <h1>Groups</h1>
</div>
<table class="table table-striped span12">
  <thead>
    <tr>
      <th>Group Name</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group_path(group) %></td>
        <td>
          <%= link_to ll('.edit'), edit_group_path(group), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td colspan="2">
        <%= link_to ll('.new'), new_group_path, :class => 'btn btn-primary btn-small' %>
      </td>
    </tr>
  </tbody>
</table>
