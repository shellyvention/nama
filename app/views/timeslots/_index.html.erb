<%- model_class = Timeslot -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:from) %></th>
      <th><%= model_class.human_attribute_name(:to) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% timeslots.each do |timeslot| %>
      <tr>
        <td><%= timeslot.from %></td>
        <td><%= timeslot.to %></td>
        <td>
          <%= link_to ll('.remove'), event_timeslot_path(@event, timeslot),
                :remote => true, :method => :delete,
                :class => 'btn btn-mini btn-danger' %>
          <%= link_to ll('.duplicate'), timeslot_duplicate_path(@event, timeslot),
                :remote => true, :method => :post,
                :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
