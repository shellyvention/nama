<div class="page-header">
  <h1>Events</h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Owner</th>
      <th>Date</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.description %></td>
        <td><%= event.user.last_name %></td>
        <td><%= event.date %></td>
        <td>
          <%= link_to ll('.edit'), edit_event_path(event), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if User.current.is_organizer? %>
  <%= link_to ll('.new'), new_event_path, :class => 'btn btn-primary' %>
<% end %>
