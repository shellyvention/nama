<!DOCTYPE html>
<html>
	<head>
		<title>Nama</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container-fluid">
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>">
				<%= value %>
			</div>
		<% end %>
		<div class="row-fluid">
			<div class="span12">
				<%= yield %>
			</div>
		</div>
	<%= render 'layouts/footer' %>
	</div>
</body>
</html>
