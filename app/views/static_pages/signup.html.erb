<h2>Sign up</h2>
<div class="row">
  <div class="span3 offset1">
    <%= form_tag create_activation_path, :class => 'form-horizontal' do %>
      <div class="control-group">
        <%= label_tag :email, nil, :class => 'control-label' %>
        <div class="controls">
          <%= text_field_tag :email, nil, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :password, nil, :class => 'control-label' %>
        <div class="controls">
          <%= password_field_tag :password, nil, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :password_confirmation, nil, :class => 'control-label' %>
        <div class="controls">
          <%= password_field_tag :password_confirmation, nil, :class => 'text_field' %>
        </div>
      </div>
    
      <div class="form-actions">
        <%= submit_tag "Sign up", :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
