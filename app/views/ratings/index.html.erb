<h3>Ratings</h3>
<div class="resource">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th style="text-align: right;">
          <%= image_tag "rating_small.png" %>
        </th>
        <th style="text-align: right;">
          Maximum
          <%= image_tag "rating_small.png" %>
        </th>
        <th style="text-align: right;">
          Extra
          <%= image_tag "rating_small.png" %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td style="text-align: right;">
            <%= Rating.rating_per_user(user.id, "stars") %>
          </td>
          <td style="text-align: right;">
            <%= Rating.rating_per_user(user.id, "stars_max") %>
          </td>
          <td style="text-align: right;">
            <%= Rating.rating_per_user(user.id, "stars_extra") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
