<h3>Ratings</h3>
<div class="resource">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= ll('.label_user') %></th>
        <th style="text-align: right;">
          <%= image_tag "rating_small.png" %>
        </th>
        <th style="text-align: right;">
          <%= ll('.label_maximum') %>
          <%= image_tag "rating_small.png" %>
        </th>
        <th style="text-align: right;">
          <%= ll('.label_extra') %>
          <%= image_tag "rating_small.png" %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td style="text-align: right;">
            <%= Rating.rating_per_user(user.id, "stars") %>
          </td>
          <td style="text-align: right;">
            <%= Rating.rating_per_user(user.id, "stars_max") %>
          </td>
          <td style="text-align: right;">
            <%= Rating.rating_per_user(user.id, "stars_extra") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @users_count > 15 %>
    <div style="height: 40px;">
      <%= will_paginate @users %>
    </div>
  <% end %>
</div>
